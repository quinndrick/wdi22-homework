<h2>Edit Mountain</h2>

<form action="/mountains/<%= @mountain["id"] %>" method="post">
  <p>
    <label for="">Mountain Name</label>
    <input type="text" name="name" value="<%= @mountain["name"]%>">
  </p>
  <p>
    <label for="">Image</label>
    <input type="text" name="image" value="<%= @mountain["image"]%>">
  </p>
  <p>
    <label for="">URL</label>
    <input type="text" name="URL" value="<%= @mountain["url"]%>">
  </p>
  <p>
    <label for="">Description</label>
    <input type="text" name="species" value="<%= @mountain["description"]%>">
  </p>
  <p>
    <label for="">Elevation</label>
    <input type="text" name="species" value="<%= @mountain["elevation"]%>">
  </p>

</form>
